<% include ../../partials/header %>

<div class="ui main text container segment">
  <div class="ui huge inverted header">Edit <%= project.title %></div>
  <form action="/projects/<%= project._id %>?_method=PUT" method="POST" class="ui form focus">
    <div class="field">
      <label>Title</label>
      <input type="text" name="project[title]" value=" <%= project.title %> " required>
    </div>
    <div class="field">
      <label>Manager</label>
      <input type="text" name="project[manager]" value=" <%= project.manager %> " required>
    </div>
    <div class="field">
      <label>Project Description</label>
      <textarea name="project[description]"> <%= project.description %> </textarea>
    </div>
    <input class="ui inverted primary button huge" type="submit">
  </form>
</div>

<% include ../../partials/footer %>
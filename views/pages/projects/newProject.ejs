<% include ../../partials/header %>

<div class="ui main text container segment">
  <div class="ui huge inverted header">New Project</div>
  <form action="/projects" method="POST" class="ui form focus">
    <div class="field">
      <label>Title</label>
      <input type="text" name="project[title]" placeholder="Title" required>
    </div>
    <div class="field">
      <label>Manager</label>
      <input type="text" name="project[manager]" placeholder="Project Manager" required>
    </div>
    <div class="field">
      <label>Project Description</label>
      <textarea name="project[description]"></textarea>
    </div>
    <input class="ui inverted primary button huge" type="submit" name="submitBtn">
  </form>
</div>

